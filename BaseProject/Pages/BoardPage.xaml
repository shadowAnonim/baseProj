<Page x:Class="BaseProject.Pages.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BaseProject.Pages"
      xmlns:project ="clr-namespace:BaseProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BoardPage">

    <Grid>
        <StackPanel>
            <ComboBox x:Name="projectCb" DisplayMemberPath="Name" SelectionChanged="projectCb_SelectionChanged"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="panel" Orientation="Horizontal"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
